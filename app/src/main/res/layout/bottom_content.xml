<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp">


        <ImageView
            android:id="@+id/edit_bottom_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_edit"
            android:layout_margin="5dp"
            />



        <ImageView
            android:id="@+id/location_bottom_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_place"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/move_bottom_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_move"
            android:layout_margin="5dp"
            />



        <ImageView
            android:id="@+id/delete_bottom_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_delete"
            android:layout_margin="5dp"
            />





    </LinearLayout>



</RelativeLayout>